
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  credentials Credential[]
  creaAt DateTime @default(now())

  @@map("users")
}

model Credential {
  id Int @id @default(autoincrement())
  title String 
  url String @unique
  username  User @relation(fields: [userId], references: [id])
  userId Int
  password String

  @@map("credentials")
}